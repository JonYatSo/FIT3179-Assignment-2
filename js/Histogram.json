{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Correlations between profit and market value for companies featured in Forbes 2000 in 2019",
  "data": {
    "url": "https://raw.githubusercontent.com/JonYatSo/FIT3179-Assignment-2/main/data/Forbes_Global_2000_for_2019_cleaned_v3.csv"
  },
  "vconcat":[{
    "width": 800,
    "height": 600,
    "selection": {
      "brush": {"type": "interval",          "encodings": ["x"]}
    },
    "layer":[{
      "mark": "bar",
      "encoding": {
        "x": {
          "bin": {"binned": false, "step": 0.025},
          "field": "ProfitPerAsset",
          "title": "Amount of profit per dollar of asset owned"
        },
        "y": {"aggregate": "count",
        "title": "Count"}
      }
    },{
      "mark": "rule",
      "encoding": {
        "x": {"aggregate": "average", "field": "Assets"},
        "color": {"value": "red"},
        "size": {"value": 20}
    }}]
  }, ]
}

"vconcat": [{
    "width": 963,
    "height": 100,
    "selection": {
      "brush": {"type": "interval", "encodings": ["x"]}
    },
    "mark": "bar",
    "encoding": {
      "x": {"field": "time", "bin": {"maxbins": 30}},
      "y": {"aggregate": "count"}
    }
  }, {
    "width": 963,
    "height": 100,
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "time",
        "bin": {"maxbins": 30, "extent": {"selection": "brush"}}
      },
      "y": {"aggregate": "count"}
    }
  }]
}
