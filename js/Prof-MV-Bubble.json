{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 950,
  "height": 1000,
  "title": {"text":"Correlations between profit and market value for companies featured in Forbes Global 2000 in 2019","fontSize":22},
  "data": {
    "url": "https://raw.githubusercontent.com/JonYatSo/FIT3179-Assignment-2/main/data/Forbes_Global_2000_for_2019_cleaned_v2.csv"
  },
  "params": [
    {
      "name": "Assets_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 300,
        "step": 10,
        "name": "Min Asset Value: "
      }
    },
    {
      "name": "Sector_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Consumer Discretionary",
          "Consumer Staples",
          "Energy",
          "Financials",
          "Health Care",
          "Industrials",
          "Information Technology",
          "Materials",
          "Telecommunication Services",
          "Utilities", 
          "Unknown"
        ],
        "labels":[
          "Show All",
          "Consumer Discretionary",
          "Consumer Staples",
          "Energy",
          "Financials",
          "Health Care",
          "Industrials",
          "Information Technology",
          "Materials",
          "Telecommunication Services",
          "Utilities", 
          "Unknown"
        ],
        "name": "Select a sector: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Australia",
          "Europe",
          "North America",
          "South America",
          "Unknown"
        ],
        "labels":[
          "Show All",
         "Africa",
          "Asia",
          "Australia",
          "Europe",
          "North America",
          "South America",
          "Unknown"
        ],
        "name": "Select continent: "
      }
    }
  ],
  "transform": [
    {"filter": "Sector_selection == null || datum.Sector == Sector_selection"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
    {"filter": "datum.Assets > Assets_Above"}
  ],
  "encoding": {
    "x": {
      "field": "Market\\.Value",
      "type": "quantitative",
      "title": "Market Value in 2019(B$USD)",
      "axis": {"tickCount": 7,"titleFontSize":17,"labelFontSize":13}
        }
    ,
    "y": {
      "field": "Profits",
      "type": "quantitative",
      "title": "Amount of profit in 2019(B$USD)",
      "axis": {"tickCount": 6,"titleFontSize":17,"labelFontSize":13}
    }
  },
  "layer": [
    {
      "mark": {"type":"circle",
               "size":200,
               "opacity":0.7
               },
      "encoding": {
        "size": {
          "field": "Assets",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain":[50,100,200,300], 
            "range": [150, 300, 450, 600, 750]
          },
          "legend": {"format": ".1s","titleFontSize":15,"labelFontSize":12}
        },
        "color": {
          "field": "Sector",
          "type": "nominal",
          "scale": {
            "domain": [
          "Consumer Discretionary",
          "Consumer Staples",
          "Energy",
          "Financials",
          "Health Care",
          "Industrials",
          "Information Technology",
          "Materials",
          "Telecommunication Services",
          "Utilities", 
          "Unknown"
            ],
            "range": 
              ["#a6cee3","#1f78b4","#b2df8a","#33a02c","#fb9a99","#e31a1c","#fdbf6f","#ff7f00","#cab2d6","#6a3d9a","#c51b8a"]
               
          },
          "legend":{"titleFontSize":15,"labelFontSize":12}
        },
        "tooltip": [
          {"field": "Company", "type": "nominal"},
          {"field": "Sector", "type": "nominal"},
          {"field": "Industry", "type": "nominal"},
          {"field": "Profits", "type": "quantitative", "format": ","},
          {"field": "Market\\.Value", "type": "quantitative", "format": ","},
          {"field": "Assets", "type": "quantitative", "format": ","},
          {"field": "Country", "type": "nominal"}          
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Company", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Company'] == 'JPMorgan Chase' || datum['Company'] == 'Apple' || datum['Company'] == 'Citigroup' || datum['Company'] == 'Toyota Motor' || datum['Company'] == 'Microsoft' || datum['Company'] == 'Alphabet' ||  datum['Company'] == 'HSBC Holdings'||  datum['Company'] == 'BP'||  datum['Company'] == 'Amazon'||  datum['Company'] == 'Johnson & Johnson'||  datum['Company'] == 'Boeing'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Company", "type": "nominal"},
          {"field": "Sector", "type": "nominal"},
          {"field": "Industry", "type": "nominal"},
          {"field": "Profits", "type": "quantitative", "format": ","},
          {"field": "Market\\.Value", "type": "quantitative", "format": ","},
          {"field": "Assets", "type": "quantitative", "format": ","},
          {"field": "Country", "type": "nominal"}          
        ]
      }
    }
          
        ]
      }
    
  

