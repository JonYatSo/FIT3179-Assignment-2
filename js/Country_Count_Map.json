{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Number of companies from each Country that is featured on Forbes Global 2000 in 2019",
  "projection": {"type": "equalEarth"},
  "params": [{"name": "MarVal_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 5,
        "name": "Min Market Value(B$USD): "
      }
    },
      {"name": "Sector_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Consumer Discretionary",
          "Consumer Staples",
          "Energy",
          "Financials",
          "Health Care",
          "Industrials",
          "Information Technology",
          "Materials",
          "Telecommunication Services",
          "Utilities", 
          "Unknown"
        ],
        "labels":[
          "Show All",
          "Consumer Discretionary",
          "Consumer Staples",
          "Energy",
          "Financials",
          "Health Care",
          "Industrials",
          "Information Technology",
          "Materials",
          "Telecommunication Services",
          "Utilities", 
          "Unknown"
        ],
        "name": "Select a sector: "
      }
    }],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JonYatSo/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JonYatSo/FIT3179-Assignment-2/main/data/Forbes_Global_2000_for_2019_cleaned_v4.csv"
      },
      "transform": [
    {"filter": "Sector_selection == null || datum.Sector == Sector_selection"},
    {"filter": "datum['Market\\.Value'] > MarVal_Above"}
  ],
      
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "color":"red",
            "opacity": 0.7
                      },
          "encoding": {
            "size": {"field": "Country",
                    "aggregate": "count",
                     "type": "quantitative",
                     "scale": {
                          "domain":[10,50,100],
                          "range":[50,100,200,500],
                          "type":"threshold",
                          "zero": false
                        }
                      
                         },
            "tooltip": [{"field": "Country", "type":"nominal"},
                        {"field": "Country","aggregate": "count", "type":"quantitative",
                        "title":"Count"}]   
            }
          }
      ]
    }
  ]

}
